@using Sandbox.UI;
@namespace Bydrive
@attribute [Icon("speed")]
@inherits PanelComponent

<root class="@UI.ActiveIf(CameraManager.IsActive<VehicleCamera>())">
	<label class="title">HEALTH</label>
	<div class="points">
		@for (int i = 1; i < MaxHealth + 1; i++)
		{
			<div class="health @GetHealthClass()">
				@if (Health >= i)
				{
					<div class="active" />
				}
			</div>
		}
	</div>
</root>

@code
{
	private VehicleController Vehicle => GetLocalVehicle();
	private int Health => Vehicle?.Health ?? 1;
	private int MaxHealth => Vehicle?.GetMaxHealth() ?? 1;
	private string GetHealthClass()
	{
		if(Health <= 0)
		{
			return "damage_full";
		}
		else if(Health <= Vehicle?.GetHalfHealth())
		{
			return "damage_half";
		}

		return "";
	}

	protected override int BuildHash() => HashCode.Combine(Health, MaxHealth, CameraManager.Instance.CurrentCameraMode);
}