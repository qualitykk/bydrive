@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent
@namespace Bydrive

@if (Race == null)
	return;

<root class="@UI.ActiveIf(CameraManager.IsActive<VehicleCamera>())">
	<label class="title">@GetDisplayLaps()/@Race.GetMaxLaps()</label>
	@if(DebugCheckpoints)
	{
		<label class="subtitle">@GetCurrentCompletion()</label>
	}
	else if(InLastLap())
	{
		<label class="subtitle">Final Lap!!</label>
	}
	else
	{
		<label class="subtitle">@RaceContext.CurrentDefinition.Name</label>
	}
</root>