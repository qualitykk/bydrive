@using Sandbox.UI;

@page "/front";
@attribute [StyleSheet]
@namespace Bydrive

<root>
	<div class="title"></div>
	<div class="options flex-row">
		<div class="group flex-col">
			<label class="header">Career</label>
			<div class="button singleplayer" @onclick=@OnClickCareerNew>New Game</div>
			<div class="button singleplayer" @onclick=@OnClickCareerLoad>Load Game</div>
		</div>
		<div class="group flex-col">
			<label class="header">Freeplay</label>
			<div class="button" @onclick=@OnClickRaceQuickplay>Quickplay</div>
			<div class="button" @onclick=@OnClickRaceBots>VS Bots</div>
			<div class="button" @onclick=@OnClickTimeTrial>Time Trials</div>
		</div>
		
		<div class="group flex-col">
			<label class="header">Other</label>
			<div class="button" @onclick=@OnClickControls>Controls</div>
			<div class="button" @onclick=@OnClickSettings>Settings</div>
		</div>
	</div>
</root>